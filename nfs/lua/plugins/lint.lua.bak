return {
  "mfussenegger/nvim-lint",
  config = function()
    local lint = require("lint")

    lint.linters_by_ft = {
      python = { "mypy" },
    }

    require("lint").linters.mypy.cmd = "dmypy run"
    require("lint").linters.mypy.args = {}
    -- table.insert(require("lint").linters.mypy.args, "run")
    -- table.insert(require("lint").linters.mypy.args, "--")

    vim.api.nvim_create_autocmd({ "BufWritePost", "InsertLeave", "TextChanged" }, {
      callback = function() lint.try_lint() end,
    })
  end,
}
