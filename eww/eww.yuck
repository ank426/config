(defwindow dim
  :monitor 0
  :stacking "overlay"
  :geometry (geometry
    :width "100%"
    :height "100%"
  )
  (box
    :style "background: rgba(0, 0, 0, 0.5)"
  )
)


(defpoll time
  :interval "100ms"
  `date '+%l:%M:%S'`
)

(defpoll period
  :interval "100ms"
  `date '+%p'`
)

(defpoll date
  :interval "100ms"
  `date '+%A, %B %e' | sed 's/  / /'`
)

(defwindow time
  :monitor 0
  :stacking "overlay"
  :geometry (geometry
    :width "25%"
    :height "50%"
    :anchor "center"
  )
  (box
    :orientation "v"
    :valign "center"
    :space-evenly false
    :style `
      border: 2px solid white;
      border-radius: 30px;
      padding: 20px;
      font-size: 50px;
    `
    (box
      :orientation "h"
      :halign "center"
      :space-evenly false
      (label
        :text "  "
        :unindent false
        :style "font-size: 0.5em"
      )
      (label
        :text time
        :style "font-size: 1em"
      )
      (label
        :text period
        :yalign 0.8
        :style "font-size: 0.5em"
      )
    )
    (label
      :text date
      :style "font-size: 0.6em;"
    )
  )
)
